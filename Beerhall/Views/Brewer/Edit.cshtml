@model Beerhall.Models.ViewModel.BrewerEditViewModel;
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>
<form method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Street"></label>
        <input asp-for="Street" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PostalCode"></label>
        <select asp-for="PostalCode" class="form-control" asp-items="@ViewData["Locations"] as SelectList">
            <option value="">--select location--</option>
        </select>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="Brewer" asp-action="Index" class="btn btn-default"></a>
    </div>
</form>

